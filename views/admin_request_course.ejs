

<!DOCTYPE html>

<html>

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <title>Course Requests</title>
  <link rel="stylesheet" href="/css/Attendance.css">
  <style>
        .bar {
            margin: 20px 0px 10px 0px;
            position: sticky;
            display: flex;
            background-color: rgb(87, 212, 225);
            border-radius: 15px;
            z-index: 10;
        }

        ul {
            display: flex;
        }

        li {
            list-style: none;
            margin: 0px 10px;
            font-size: 20px;
        }

        a {
            text-decoration: none;
            padding: 7px;
            color: #072ff2;
        }

        li a:hover {
            border: 1px solid black;
            border-radius: 15px;
            color: black;
            text-decoration: none;
            background-color: #dbefea;
        }

        @media (min-width: 385px) and (max-width: 510px) {
            ul {
                padding-inline-start: 10px;
            }

            li {
                font-size: 13px;
            }
        }

        @media (max-width: 385px) {
            ul {
                padding-inline-start: 5px;
            }

            li {
                font-size: 11px;
                margin: 0px 2px;
            }
        }
    </style>
</head>

<body>
   <nav class="navbar">
        <img class="logo" src="/css/images/logo.png" alt="...">
        <h3>भारतीय प्रौद्योगिकी संस्थान इंदौर <br> Indian Institute of Technology Indore</h3>
    </nav>

    <div class="bar">
        <ul>
            <!-- <li><a href="/Home_page">Home</a></li> -->
            <li><a href="/Admin_home">Admin Home</a></li>
            <li><a href="/admin_change_password">Change Password</a></li>
            <li><a href="/set_sem_dates">Set Semester Dates</a></li>
            <li><a href="/admin_change_email">Edit Email</a></li>
            <li><a href="/admin_request_course">Courses Request List</a></li>
            <li><a href="/logout">Log Out</a></li>
        </ul>
    </div>

  
 
    <%if(typeof data != 'undefined'){
        var i=1; %>
          <table class="table">
      <tr style="color: rgb(151, 4, 156); background-color: chartreuse;">
        <th>Serial No.</th>
        <th>Roll No.</th>
        <th>Course Code</th>
        <th>Accept</th>
        <th>Reject</th>
      </tr>
      <% var i =1%>
      <% data.forEach((item)=>{ %>
        <tr>
          <td><%= i %></td>
          <td><%= item.Roll_No %></td>
          <td><%= item.Course_Code %></td>
          <!-- <td><%= item.Credits %></td> -->
          <% var link = '/admin_accept_course/?id='+item.Roll_No+'&code=';
          link += item.Course_Code;%>
          <td><a href="<%=link%>"><button>Accept</button></a></td>
          <% var link = '/admin_reject_course/?id='+item.Roll_No+'&code=';
          link += item.Course_Code;%>
          <td><a href="<%=link%>"><button>Reject</button></a></td>
      </tr>
      <% i++}) %>
    </table>
    <%}else{%>
        <h3>There are no pending Course Requests.</h3>
    <%} %>
    <%if( typeof error != 'undefined'){%>
        <p><%=error%></p>
        <%}%>
        <%if( typeof info != 'undefined'){%>
            <p><%=info%></p>
            <%}%>
</body>

</html>
